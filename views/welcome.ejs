<% layout("/layouts/boilerplate.ejs") -%>
<style>
.welcome{
    /* background-color: pink; */
    text-align: center;
    margin-top: 10rem;

}
.main{
    font-family: "Irish Grover", system-ui;
    font-weight: 400;
    font-style: normal;
    font-size: 5rem;
}
.details{
    font-family: "Love Ya Like A Sister", cursive;
  font-weight: 400;
  font-style: normal;
  font-size: 2rem;
}
.explore-btn {
    background: linear-gradient(135deg, #ff7eb3, #ff758c);
    color: white;
    font-size: 1.2rem;
    font-weight: bold;
    margin-top:2rem;
    padding: 12px 24px;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    text-transform: uppercase;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 5px 15px rgba(255, 117, 140, 0.3);
    position: relative;
    overflow: hidden;
}

.explore-btn:hover {
    background: linear-gradient(135deg, #ff758c, #ff7eb3);
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(255, 117, 140, 0.5);
}

.explore-btn:active {
    transform: scale(0.95);
}

</style>
<div class="welcome">
    <h1 class="main">Welcome to WanderLust</h1>
    <h3 class="details">Enjoy your weekends & Holidays</h3>
    <button class="explore-btn" onclick="redirectToRoute()">Start your Adventure</button>
</div>
    <script>
        function redirectToRoute() {
            window.location.href = "/listings"; // Change to your route
        }
    </script>
